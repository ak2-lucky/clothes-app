<% provide(:title, 'User Edit') %>
<h2>ユーザー編集</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :sex %><br>
    <%= f.select :sex, [["男性", "男性"], ["女性", "女性"]],:prompt => "選択してください" %>
  </div>
  <div class="field">
    <%= f.label :height %><br>
    <%= f.select :height, [["130cm台", "130cm台"], ["140cm台", "140cm台"],
    ["150cm台", "150cm台"], ["160cm台", "160cm台"],["170cm台", "170cm台"],
    ["180cm台", "180cm台"], ["190cm台", "190cm台"]],:prompt => "選択してください" %>
  </div>
  <div class="field">
    新しい<%= f.label :password %> (パスワードを変更しない場合、空白で構いません)<br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
    <% end %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :current_password %> (情報更新のために現在のパスワードを入力してください)<br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <div class="actions">
    <%= f.submit "情報を更新する" %>
  </div>
<% end %>
<br>
<h3>アカウント削除</h3>
<p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除してよろしいでしょうか?" }, method: :delete %></p>
<%= link_to "戻る", :back %>
