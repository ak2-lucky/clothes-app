<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="form-group row">
  　<%= f.label :sex %><br />
    <%= f.select :sex, [["Mens", "Mens"], ["Womens", "Womens"]],:prompt => "選択してください" %>
  </div>
  
  <div class="form-group row">
  　<%= f.label :brand %><br />
    <%= f.select :brand, [["UNIQLO", "UNIQLO"], ["GU", "GU"]],:prompt => "選択してください" %>
  </div>
  
  <div class="form-group row">
  　<%= f.label :category %><br />
    <%= f.select :category, [["アウター", "アウター"], ["トップス", "トップス"],
    ["ボトムス", "ボトムス"], ["アクセサリー", "アクセサリー"], ["シューズ", "シューズ"]],:prompt => "選択してください" %>
  </div>
  
  <div class="form-group row">
  　<%= f.label :product_name %><br />
    <%= f.text_field :product_name %>
  </div>
  
  <div class="form-group row" id="star">
    <%= f.label :rate, class:'col-md-3 col-form-label' %>
    <%= f.hidden_field :rate, id: :post_star %>
  </div>
  
  <script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'post[rate]',
    half: true,
  });
  </script>  
  
  <div class="form-group row">
     <%= f.label :context, '口コミ内容 ', class:'col-md-3 col-form-label' %>
    <div class="col-md-9">
      <%= f.text_area :context, class: "form-control", rows: "8",
        placeholder:'レビューを記入してみましょう' %>
    </div>
  </div>
  
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/png' %>
  </span>
  
  <script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('最大5MBのファイルまで選択できます. それより小さいファイルを選択してください');
    }
  });
</script>
  
  
  <div class="form-group row justify-content-end">
    <div class="col-md-9">
      <%= f.submit '投稿する', class:"btn btn-success" %>
    </div>
  </div>
<% end %>